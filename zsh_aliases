# From the ubuntu .bashrc
# enable color support of ls and also add handy aliases
# Oh-my-zsh! has more powerful color capabilities, but
# this works well and requires no further installation
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
fi

# Aliases
alias l='ls -CF'
alias la='ls -AF'
alias ll='ls -alF'
alias lh='ls -alFh'
alias dirs='ls -d */'
alias back='cd $OLDPWD'
alias h='history 0'
alias cdd='cd ../'
alias cddd='cd ../../'
alias cdddd='cd ../../../'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias cfas="grep -c '>'"
alias ghist='history 0 | grep'
alias gi='grep -i'
alias ff='find . -type f -name'

